{
    "manifest_version": 2,
 
    "name": "SteemFeed",
    "version": "0.3.1",
    "description": "Filter by tags on steemit.com blogs",
    "permissions": [
        "activeTab",
        "storage",
        "declarativeContent"
    ],
    "background": {
        "scripts": ["background.js"]
      },
    "page_action": {
        "default_title": "SteemFeed",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    }
}